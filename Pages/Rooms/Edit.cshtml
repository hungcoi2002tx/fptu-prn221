@page
@model Assignment.Pages.Rooms.EditModel

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Room.Id" />
            <div class="form-group">
                <label asp-for="Room.Code" class="control-label"></label>
                <input asp-for="Room.Code" class="form-control" />
                <span asp-validation-for="Room.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.CreateTime" class="control-label"></label>
                <input asp-for="Room.CreateTime" class="form-control" readonly="true" />
                <span asp-validation-for="Room.CreateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button class="back-list-btn">
        <a asp-page="./Index">Back to List</a>
    </button>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
