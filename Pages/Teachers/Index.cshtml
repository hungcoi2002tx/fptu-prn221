@page
@model Assignment.Pages.Teachers.IndexModel

<button class="add-btn">
    <a asp-page="Create">Create New</a>
</button>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].CreateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Teacher) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                    @Model.Teacher.CreateTime.Value.ToString("dd/MM/yyyy")
            </td>
            <td>
                <button class="edit-btn">
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                </button>
                <button class="detail-btn">
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                </button>
                <button class="delete-btn">                        
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </button>  
            </td>
        </tr>
}
    </tbody>
</table>
