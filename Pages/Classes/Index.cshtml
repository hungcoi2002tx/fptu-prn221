@page
@model Assignment.Pages.Classes.IndexModel

<button class="add-btn">
    <a asp-page="Create">Create New</a>
</button>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ViewModels[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ViewModels[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ViewModels[0].CreateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ViewModels)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Code
                </td>
                <td>
                    @item.CreateTime.ToString("dd/MM/yyyy")
                </td>
                <td>
                    <button class="edit-btn"><a asp-page="./Edit" asp-route-id="@item.Id" style="">Edit</a></button>
                    <button class="detail-btn"><a asp-page="./Details" asp-route-id="@item.Id">Details</a></button>
                    <button class="delete-btn"><a asp-page="./Delete" asp-route-id="@item.Id">Delete</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>
