@page
@model Assignment.Pages.Rooms.CreateModel

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Room.Id" value="@Guid.NewGuid().ToString("N")" hidden="true" />
            <div class="form-group">
                <label asp-for="Room.Code" class="control-label"></label>
                <input asp-for="Room.Code" class="form-control" />
                <span asp-validation-for="Room.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button class="back-list-btn">
        <a asp-page="Index">Back to List</a>
    </button>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
