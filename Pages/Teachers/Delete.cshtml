@page
@model Assignment.Pages.Teachers.DeleteModel

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Teacher</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.Code)
        </dd>
        <dd class="col-sm-2">
            Trạng thái
        </dd>
        <dt class="col-sm-10">
            @(Model.Teacher.Status == true ? "Active" : "DeActive")
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.CreateTime)
        </dt>
        <dd class="col-sm-10">
            @Model.Teacher.CreateTime.Value.ToString("dd/MM/yyyy")
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Teacher.Id" />
        <input type="submit" value="@(Model.Teacher.Status == true ? "DeActive" : "Active")" class="delete-btn" style="border: none," />
        <button class="back-list-btn">
            <a asp-page="./Index">Back to List</a>
        </button>
    </form>
</div>
